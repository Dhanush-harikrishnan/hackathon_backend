# SafeRoute Backend Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Atlas Cloud
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/saferoute?retryWrites=true&w=majority

# JWT Secret (use a strong random string in production)
JWT_SECRET=your-jwt-secret-here

# Server Port
PORT=3001

# Frontend URL for CORS (comma-separated for multiple URLs)
# For local: http://localhost:5173
# For production: https://your-frontend.vercel.app
FRONTEND_URL=http://localhost:5173
